<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/zsq_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/title_bg" >

        <ImageButton
            android:id="@+id/imBack"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/back_btn_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ping_l"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="#14010B"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/share_textview_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="14dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:text="已绑定"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14dip"
            android:gravity="center"
            android:text="新浪微博分享"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!-- <TextView android:layout_width="fill_parent" -->
        <!-- android:layout_weight="1.0" android:layout_height="wrap_content" -->
        <!-- android:text="" /> -->

        <ImageView
            android:id="@+id/fenxiang"
            android:layout_width="50dip"
            android:layout_height="27dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/fenxiang"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="170dip"
            android:layout_marginLeft="11dip"
            android:layout_marginRight="11dip"
            android:layout_marginTop="2dip"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="8dip" >

            <EditText
                android:id="@+id/et_content"
                android:layout_width="fill_parent"
                android:layout_height="130dip"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:gravity="left"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/frame"
            android:layout_marginLeft="11dip"
            android:layout_marginRight="11dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="23dip"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#585858"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="23dip"
                android:layout_gravity="center"
                android:layout_marginRight="8dip"
                android:text="/140"
                android:textColor="#585858"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>