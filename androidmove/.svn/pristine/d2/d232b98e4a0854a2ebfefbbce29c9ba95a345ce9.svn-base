<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="140dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/checkbox"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:background="@drawable/checkbox" />

            <TextView
                android:id="@+id/zhifuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="动感地带M值"
                android:textSize="14sp" />

            <LinearLayout android:id="@+id/helpLinear" android:layout_width="30dip" android:layout_height="40dip" android:gravity="center">
            <ImageView
                android:id="@+id/help"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:background="@drawable/intre_select" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="110dip"
            android:layout_height="40dip"
            
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="(1+30%)x8"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            
            <TextView
                android:id="@+id/chenghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/count"
                android:textColor="#ffffff"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:text="×" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/chenghao"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:text="元" />
            <TextView
                android:id="@+id/priceMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/unit"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:text="80" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:text="="
                android:textSize="13sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/sumMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="360 "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#D96B21"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/sumMoneyUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#D96B21"
                android:textSize="13sp" />
        </LinearLayout>

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/helpMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13sp" 
            android:visibility="gone">
        </TextView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/choosePhonePayType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="47dip"
        android:visibility="gone"
        >

        <ImageView
                android:id="@+id/checkboxPayAll"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:background="@drawable/checkbox" />
        <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="全额支付"
                android:textSize="14sp" />
        <ImageView
                android:id="@+id/checkboxPayYouhui"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_marginLeft="25dip"
                android:background="@drawable/checkbox" />
        <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="抵扣券支付"
                android:textSize="14sp" />
        
    </LinearLayout>
</LinearLayout>
</LinearLayout>