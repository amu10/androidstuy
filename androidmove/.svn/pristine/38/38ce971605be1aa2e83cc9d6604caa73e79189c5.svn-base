<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="90dip"
        android:layout_height="150dip"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/movie_item_textView_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/movie_item_imageView_pic"
            android:layout_width="80dip"
            android:layout_height="118dip"
            android:layout_above="@id/movie_item_textView_name"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="11dip"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/movie_item_imageView_score"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_above="@id/movie_item_textView_name"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/fenbg"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_item_textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/movie_item_textView_name"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_movie_text_score"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/movie_item_textView_score_image"
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_above="@id/movie_item_textView_name"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/clock"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/movie_item_textView_date"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_above="@id/movie_item_textView_name"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@drawable/titlebg"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_movie_text_date"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/movie_item_imageView_frame"
            android:layout_width="82dip"
            android:layout_height="120dip"
            android:layout_above="@id/movie_item_textView_name"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/film_cover_red_bg"/>
    </RelativeLayout>

</RelativeLayout>